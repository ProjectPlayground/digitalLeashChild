<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/child_background"
    tools:context="layout.FragmentReportLocation">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/reportingText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/reporting"
            android:textColor="@color/textColor"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/reportingText2"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="@string/reporting2"
            android:textColor="@color/textColor"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/edit_text_bottom_margin"
            android:gravity="center"
            />

        <Button
            android:id="@+id/buttonGoodChild"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="italic"
            android:background="@drawable/button_rounded_white"
            android:text="@string/done"
            android:gravity="center"
            android:onClick="onClickDone"
            />

    </LinearLayout>

</FrameLayout>
